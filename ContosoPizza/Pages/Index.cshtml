@page
@model IndexModel
@{
    ViewData["Title"] = "O Lar dos Amantes de Pizza";
    TimeSpan tempoDeNegocio = DateTime.Now - new DateTime(2018, 8, 14);
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo à Contoso Pizza</h1>
    <p class="lead">A melhor pizza da cidade por @Convert.ToInt32(tempoDeNegocio.TotalDays) dias!</p>
    <img src="~/images/logo.png" alt="Logo da Contoso Pizza" class="my-4" style="max-width: 200px;">
</div>

<!-- Carrossel de Imagens -->
<div id="pizzaCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/pizza1.jpg" class="d-block w-100" alt="Pizza 1">
        </div>
        <div class="carousel-item">
            <img src="~/images/pizza2.jpg" class="d-block w-100" alt="Pizza 2">
        </div>
        <div class="carousel-item">
            <img src="~/images/pizza3.jpg" class="d-block w-100" alt="Pizza 3">
        </div>
        <div class="carousel-item">
            <img src="~/images/pizza4.jpg" class="d-block w-100" alt="Pizza 4">
        </div>
    </div>
    <a class="carousel-control-prev" href="#pizzaCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#pizzaCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>

<!-- Cards de Pizzas -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/pizza1.jpg" class="card-img-top" alt="Pizza 1">
                <div class="card-body">
                    <h5 class="card-title">Pizza Margherita</h5>
                    <p class="card-text">Uma delícia clássica com tomates frescos, queijo mussarela e manjericão.</p>
                    <a href="/PizzaList" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/pizza2.jpg" class="card-img-top" alt="Pizza 2">
                <div class="card-body">
                    <h5 class="card-title">Pizza Pepperoni</h5>
                    <p class="card-text">Carregada com fatias de pepperoni e queijo mussarela.</p>
                    <a href="/PizzaList" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/images/pizza3.jpg" class="card-img-top" alt="Pizza 3">
                <div class="card-body">
                    <h5 class="card-title">Pizza de Frango BBQ</h5>
                    <p class="card-text">Coberta com frango BBQ, cebolas roxas e coentro.</p>
                    <a href="/PizzaList" class="btn btn-primary">Comprar</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
